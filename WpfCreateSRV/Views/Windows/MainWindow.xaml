<Window x:Class="WpfCreateSRV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCreateSRV"
        xmlns:controls="clr-namespace:WpfCreateSRV.Views.Controls"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Canvas Grid.Column="0" Name="MainCanvas" Focusable="True"
                MouseLeftButtonDown="MainCanvas_OnMouseLeftButtonDown">
        </Canvas>
        <controls:PropertiesUserControl Grid.Column="1">
            
        </controls:PropertiesUserControl>
    </Grid>
</Window>